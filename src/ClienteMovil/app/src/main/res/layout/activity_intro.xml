<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro">

    <TextView
        android:id="@+id/bienvendioUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenidoUsuario"
        android:textSize="32dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/iconoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fa_solid_900"
        android:text="\uf007"
        android:textSize="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iconoCorrectoError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvendioUsuario"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/iconoCorrectoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fa_solid_900"
        android:text="\uf013"
        android:textSize="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintLeft_toRightOf="@id/iconoUsuario"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvendioUsuario"
        app:layout_constraintVertical_bias="0.246" />

    <TextView
        android:id="@+id/eitquetaPrimaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/necesitaRegistrarse"
        android:textAlignment="center"
        android:textSize="32dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etiquetaSecundaria" />

    <TextView
        android:id="@+id/etiquetaSecundaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graciasPorRegistrarAsistencia"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonEscanierQr" />
        />

    <Button
        android:id="@+id/botonEscanierQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Escanear QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
